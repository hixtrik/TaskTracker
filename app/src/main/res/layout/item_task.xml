<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_marginVertical="10dp"
    android:layout_marginHorizontal="5dp"
    android:background="@drawable/border"
    >

    <TextView
        android:id="@+id/tv_room_no"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:layout_marginHorizontal="@dimen/margin"
        android:paddingHorizontal="@dimen/text_padding"
        android:paddingVertical="@dimen/item_padding"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="100" />

    <TextView
        android:id="@+id/tvService"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/margin"
        android:ellipsize="end"
        android:maxLines="1"
        android:paddingHorizontal="@dimen/text_padding"
        android:paddingVertical="@dimen/item_padding"
        android:textColor="@color/black"
        app:layout_constraintStart_toEndOf="@+id/tv_room_no"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Temizlik" />

    <TextView
        android:id="@+id/tv_work_to_do"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/margin"
        android:ellipsize="end"
        android:maxLines="1"
        android:paddingHorizontal="@dimen/text_padding"
        android:paddingVertical="@dimen/item_padding"
        android:textColor="@color/black"
        app:layout_constraintEnd_toStartOf="@+id/tvStatus"
        app:layout_constraintStart_toEndOf="@+id/tvService"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Lamba Kırık" />

    <TextView
        android:id="@+id/tvStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:maxLines="1"
        android:layout_marginHorizontal="@dimen/margin"
        android:paddingHorizontal="@dimen/text_padding"
        android:paddingVertical="@dimen/item_padding"
        android:textColor="@color/black"
        app:layout_constraintEnd_toStartOf="@+id/tvEmployee"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Beklemede" />

    <TextView
        android:id="@+id/tvEmployee"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:minWidth="60dp"
        android:ellipsize="end"
        android:layout_marginHorizontal="@dimen/margin"
        android:paddingHorizontal="@dimen/text_padding"
        android:paddingVertical="@dimen/item_padding"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Atanan personel" />


</androidx.constraintlayout.widget.ConstraintLayout>